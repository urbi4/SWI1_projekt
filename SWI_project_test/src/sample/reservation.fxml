<AnchorPane prefHeight="370.0" prefWidth="433.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ReservationController">
   <children>
        <TextField fx:id="inputName" layoutX="36.0" layoutY="74.0" promptText="name" />
        <TextField fx:id="inputSurname" layoutX="38.0" layoutY="133.0" promptText="surname" />
        <TextField fx:id="inputAddress" layoutX="36.0" layoutY="193.0" promptText="address" />
        <TextField fx:id="inputPhone" layoutX="36.0" layoutY="253.0" promptText="+420" />
        <Label layoutX="225.0" layoutY="176.0" text="Time" />
