      <Label fx:id="missingInfo" layoutX="151.0" layoutY="31.0" text="Need to enter all information" />
      <Button fx:id="closeButton" layoutX="387.0" layoutY="14.0" mnemonicParsing="false" onAction="#closeButton" text="X" />
