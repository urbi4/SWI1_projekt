      <Label fx:id="dateInPast" layoutX="215.0" layoutY="78.0" text="Cannot choose  date in past." />
      <Label fx:id="phoneFormat" layoutX="36.0" layoutY="226.0" text="Bad phone format" />
      <Label fx:id="todayDate" layoutX="199.0" layoutY="159.0" prefHeight="18.0" prefWidth="228.0" text="Need to reservate at least for tommorrow." />
   </children>
</AnchorPane>
